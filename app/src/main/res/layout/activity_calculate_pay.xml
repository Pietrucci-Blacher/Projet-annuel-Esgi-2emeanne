<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/upDark"
    tools:context=".calculatePay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:src="@drawable/logo" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Détails de votre rémunération"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/parcelPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... colis x 1.90€"
        android:textColor="@color/white"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/kmPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... km parcourus x 0.36€"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/weightPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... prime charges lourdes"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="(3€ par tranche de 22kg quand le colis dépasse 30kg)"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/objectifPrime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... prime d'objectif"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/objectifPrimeDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="... colis livrés / ... colis affectés"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="20dp">

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/upGold"
            android:text="Récupérer ... €" />

    </LinearLayout>

</LinearLayout>